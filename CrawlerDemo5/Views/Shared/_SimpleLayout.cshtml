@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_SimpleLayout</title>
    @Styles.Render("~/Content/themes/easyui/css")
    <style type="text/css">
html{color:#000; background:#FFF}
body, div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, code, form, fieldset, legend, input, textarea, p, blockquote, th, td{margin:0; padding:0}
table{border-collapse:collapse; border-spacing:0}
fieldset, img{border:0}
address, caption, cite, code, dfn, em, strong, th, var{font-style:normal; font-weight:normal}
li{list-style:none}
caption, th{text-align:left}
h1, h2, h3, h4, h5, h6{font-size:100%; font-weight:normal}
q:before, q:after{content:''}
abbr, acronym{border:0; font-variant:normal}
sup{vertical-align:text-top}
sub{vertical-align:text-bottom}
input, textarea, select{font-family:inherit; font-size:inherit; font-weight:inherit}
input, textarea, select{*font-size:100%}
legend{color:#000}

body {font-size: 12px;font-family: Verdana, Geneva, Helvetica, sans-serif; padding:10px; }
a{ color:#333;  outline:none;  padding-left:3px;  padding-right:3px;  text-decoration:underline}
a:link, a:visited, 
a:active, a:hover{ color:#333}
a:hover{ background-color:#c7d1d6}


        </style>
</head>
<body>
     @RenderBody()
     <script type="text/javascript" src="/scripts/jquery-1.8.0.min.js"></script>
    <script type="text/javascript" src="/Scripts/jquery.easyui.min.js"></script>
<script type="text/javascript" src="/Scripts/jquery.easyui.client.js"></script>
	@*<script type="text/javascript" src="/scripts/jquery-ui-1.10.1.js"></script>
	<script type="text/javascript" src="/scripts/jquery.layout-1.3.0.min.js"></script>*@
    @RenderSection("scriptfiles", required: false)
    @RenderSection("scripts", required: false)
</body>
</html>
